{
    "kind": "ReplicationController",
    "apiVersion": "v1beta3",
    "metadata": {
        "name": "rolling-update-v1"
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "name": "rolling-update",
            "version": "1"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "rolling-update",
                    "version": "1"
                }
            },
            "spec": {
                "containers": [{
                    "image": "mdevilliers/rolling-update-web-image:v1",
                    "name": "rolling-update",
                    "ports": [{
                        "containerPort": 8080,
                        "hostPort": 8080,
                        "protocol": "TCP"
                    }]
                }]
            }
        }
    }
}