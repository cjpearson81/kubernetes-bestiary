{
  "kind": "Pod",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "secrets-reader"
  },
  "spec": {
      "containers": [{
        "name": "secrets-reader",
        "image": "mdevilliers/secrets-web-image",
        "volumeMounts": [{
          "name": "foo",
          "mountPath": "/etc/foo",
          "readOnly": true
        }]
      }],
      "volumes": [{
        "name": "foo",
        "secret": {
          "secretName": "mysecret"
        }
      }]
    }
}
